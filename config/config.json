{

  "log": {
    "main": {
      "console": {
        "level": "debug"
      },
      "file": {
        "level": "info"
      }
    }
  },

  "middleware": {

    "favicon": {
      "enabled": false
    },

    "static": {
      "enabled": false
    },

    "appsec": {
      "module": {
        "arguments": [
          {
            "csrf": false
          }
        ]
      }
    },

    "router": {
      "module": {
        "arguments": [{ "directory": "path:./controllers" }]
      }
    }

  }
}
